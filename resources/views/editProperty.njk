{% extends 'layout' %}

{% block content %}

<h2>Hirdetés szerkesztése</h2>

{% if old('errors') %}
<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Hibalista</h3>
  </div>
  <div class="panel-body">
    <ul>
      {% for error in old('errors') %}
      <li>{{ error.message }}</li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endif %}

<form class="form-horizontal" action="" method="post">

  {{ csrfField }}

  <div class="form-group">
    <label for="city" class="col-lg-2 control-label">Város</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="city" name="city" placeholder="Város"
        value="{{ property.city }}">
    </div>
  </div>

    <div class="form-group">
    <label for="address" class="col-lg-2 control-label">Cím</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="address" name="address" placeholder="Cím"
        value="{{ property.address }}">
    </div>
  </div>

  <div class="form-group">
    <label for="property_type" class="col-lg-2 control-label">Típus</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="property_type" name="property_type" placeholder="Típus"
        value="{{ property.property_type }}">
    </div>
  </div>

    <div class="form-group">
    <label for="price" class="col-lg-2 control-label">Ár</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="price" name="price" placeholder="Ár"
        value="{{ property.price }} ">Ft
    </div>
  </div>
      <div class="form-group">
    <label for="size" class="col-lg-2 control-label">Méret</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="size" name="size" placeholder="Méret"
        value="{{ property.size}} ">
    </div>
  </div>
        <div class="form-group">
    <label for="condition" class="col-lg-2 control-label">Állapot</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="condition" name="condition" placeholder="Állapot"
        value="{{ property.condition }} ">
    </div>
  </div>
          <div class="form-group">
    <label for="floor" class="col-lg-2 control-label">Emelet</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="floor" name="floor" placeholder="Emelet"
        value="{{ property.floor }} ">
    </div>
  </div>

  <div class="form-group">
    <label for="desctiption" class="col-lg-2 control-label">Leírás</label>
    <div class="col-lg-10">
      <textarea class="form-control" rows="3" id="desctiption" name="desctiption">{{ property.desctiption }}</textarea>
      <span class="help-block">Plusz információ</span>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <button type="reset" class="btn btn-default">Cancel</button>
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>
</form>

{% endblock %}