{% extends 'layout' %}

{% block content %}

<h2>Kiemelt hirdetések</h2>

<div class="row">
  <div class="panel panel-default">
    <div class="panel-heading">Kiemelt hirdetésink</div>
      <div class="panel-body">
        <ul class="list-group">
        {% for property in properties %}
          <li class="list-group-item clearfix">
              <div class="col-md-4 col-sm-6">
              <img class="img-circle" src="{{ property.image }}" alt="image"
              width="300" height="150">
              </div>
              <div class="col-md-3 col-sm-6">
              <p class="text-center">Város: {{ property.city }} </p></br>
              <p class="text-center">Cím: {{ property.address }} </p>
              </div>
              <div class="col-md-3 col-sm-6">
              <p class="text-center">Ár: {{ property.price }} Ft</p></br>
              <p class="text-center">Terület: {{ property.size }} nm </p>
              </div>
              <div class="col-md-2 col-sm-6">
                <a href="/advertisments/{{ property.id }}">
                  Részletek
                </a>
              </div>
          </li>
          
        {% endfor %}
      </ul>
    </div>    
  </div>
</div>
{% endblock %}





      
        
